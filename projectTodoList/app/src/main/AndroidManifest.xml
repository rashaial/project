<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rashaial.aug.todolistproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name="rashaial.aug.todolistproject.SingleTask"></activity>
        <activity android:name="rashaial.aug.todolistproject.TasksActivity" />
        <activity android:name="rashaial.aug.todolistproject.CategoriesActivity" />
        <activity android:name="rashaial.aug.todolistproject.LoginActivity" />
        <activity android:name="rashaial.aug.todolistproject.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="rashaial.aug.todolistproject.SignUpActivity" />
    </application>

</manifest>